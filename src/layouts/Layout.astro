---
import '@unocss/reset/tailwind.css'
import 'unocss-hmr-fix'

export interface Props {
  title: string
  lang: string
  base_url: string
  first_name: string
  last_name: string
  description: string
  username: string
  gender: string
  avatar: string
  keywords: string[]
}

const {
  title,
  lang,
  first_name,
  last_name,
  description,
  keywords,
  base_url,
  username,
  gender,
  avatar
} = Astro.props as Props
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(',')} />
    <meta name="author" content={`${first_name} ${last_name}`} />
    <meta name="copyright" content={`${first_name} ${last_name}`} />
    <meta name="robots" content="follow" />

    <meta property="og:title" content={title} />
    <meta property="og:type" content="profile" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={avatar} />
    <meta property="og:url" content={base_url} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="og:site_name" content={title} />
    <meta
      name="twitter:image:alt"
      content={`${first_name} ${last_name} Profile Picture`}
    />
    <meta name="profile:first_name" content={first_name} />
    <meta name="profile:last_name" content={last_name} />
    <meta name="profile:username" content={username} />
    <meta name="profile:gender" content={gender} />

    <script
      src="https://code.iconify.design/iconify-icon/1.0.0-beta.3/iconify-icon.min.js"
      async
    ></script>
    <script src="https://unpkg.com/swup@2.0.18/dist/swup.min.js" defer></script>
    <script
      src="https://unpkg.com/@mgjules/swup-progress-plugin@1.3.0/dist/SwupProgressPlugin.min.js"
      defer
    ></script>
    <script
      src="https://unpkg.com/@swup/preload-plugin@1.0.4/dist/SwupPreloadPlugin.min.js"
      defer
    ></script>
    <script
      src="https://unpkg.com/@swup/head-plugin@1.2.1/dist/SwupHeadPlugin.min.js"
      defer
    ></script>
    <script
      src="https://unpkg.com/swup-morph-plugin@0.2.0/dist/SwupMorphPlugin.min.js"
      defer
    ></script>
    <script
      src="https://unpkg.com/@ngsctt/swup-preserve-scroll-plugin@0.1.0/dist/SwupPreserveScrollPlugin.min.js"
      defer
    ></script>
    <script type="module" is:inline defer>
      new Swup({
        animationSelector: '[class*="swup-transition-"]',
        plugins: [
          new SwupProgressPlugin(),
          new SwupPreloadPlugin(),
          new SwupHeadPlugin({
            persistAssets: true
          }),
          new SwupMorphPlugin({
            containers: ['#tabs', '#sidebar', '#title']
          }),
          new SwupPreserveScrollPlugin({
            selector: '.swup-preserve-scroll',
            quiet: false
          })
        ]
      })
    </script>

    <title>{title}</title>
  </head>

  <body class="font-sans antialiased scroll-smooth">
    <slot />
  </body>
</html>

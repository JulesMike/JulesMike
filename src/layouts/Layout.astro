---
import "@unocss/reset/tailwind.css"
import "unocss-hmr-fix"

import ogImage from '../img/profile.jpg'

export interface Props {
  title: string;
  lang: string;
  base_url: string;
  first_name: string;
  last_name: string;
  description: string;
  username: string;
  gender: string;
  keywords: string[];
}

const { title, lang, first_name, last_name, description, keywords, base_url, username, gender } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang={lang}>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />

  <meta name="description" content={description} />
  <meta name="keywords" content={keywords.join(",")} />
  <meta name="author" content={`${first_name} ${last_name}`} />
  <meta name="copyright" content={`${first_name} ${last_name}`} />
  <meta name="robots" content="follow" />

  <meta property="og:title" content={title}>
  <meta property="og:type" content="profile" />
  <meta property="og:description" content={description}>
  <meta property="og:image" content={ogImage}>
  <meta property="og:url" content={base_url}>
  <meta name="twitter:card" content="summary_large_image">
  <meta property="og:site_name" content={title}>
  <meta name="twitter:image:alt" content={`${first_name} ${last_name} Profile Picture`}>
  <meta name="profile:first_name" content={first_name}>
  <meta name="profile:last_name" content={last_name}>
  <meta name="profile:username" content={username}>
  <meta name="profile:gender" content={gender}>

  <title>{title}</title>
</head>

<body class="font-sans antialiased bg-white">
  <div class="relative px-4 pt-4 sm:pt-16 print:pt-0 sm:px-6 lg:px-8">
    <slot />
  </div>

  <div class="max-w-4xl mx-auto mt-8 mb-4 text-base prose text-center text-gray-400 prose-sky">
    <p class="hidden print:inline-block">Printed from mgjules.dev</p>
    <p class="mb-0 text-sm print:hidden">Made with
      <span class="i-ri:heart-fill bg-[length:100%_100%] w-4 h-4 inline-block align-middle text-pink-600" /> using <a href="https://astro.build/"
        target="_blank">Astro</a> & <a href="https://tailwindcss.com/" target="_blank">TailwindCSS</a>.
    </p>
    <p class="mt-2 print:hidden">&copy; { (new Date()).getFullYear() } { title }. All rights reserved.
    </p>
  </div>
</body>

</html>
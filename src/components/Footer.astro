---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;

const currentYear = (new Date()).getFullYear()
---

<div class="max-w-4xl mx-auto mt-4 mb-4 text-base prose text-center text-gray-400 sm:mt-16 prose-sky">
  <p class="hidden print:inline-block">Printed from mgjules.dev</p>
  <p class="mb-0 text-sm print:hidden">Made with
    <span class="i-ri:heart-fill bg-[length:100%_100%] w-4 h-4 inline-block align-middle text-pink-600" /> using <a
      href="https://astro.build/" target="_blank">Astro</a>, <a href="https://tailwindcss.com/"
      target="_blank">TailwindCSS</a> & <a href="https://www.netlifycms.org/" target="_blank">Netlify CMS</a>.
  </p>
  <p class="mt-2 text-sm print:hidden">&copy; { currentYear } { title }. All rights reserved.
  </p>
</div>
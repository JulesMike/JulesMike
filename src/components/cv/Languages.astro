---
import slugify from 'slugify'
import { getLanguages } from '@api/index'

const languages = await getLanguages()
---

<ul role="list"
  class="grid grid-cols-1 m-4 ml-0 list-none gap-x-12 gap-y-4 sm:grid-cols-2 print:block print:mt-4 print:columns-2">
  {languages.map(language =>
  <li id={slugify("Languages "+language.name)}
        class="flex items-center gap-4 pl-0 my-0  group print:mt-4 print:first:mt-0 print:break-inside-avoid">
    <div class="flex-shrink-0 w-10 h-10 overflow-hidden transition border rounded-md border-slate-900/30">
      <iconify-icon icon={language.icon} width="40" height="40" />
    </div>
    <div>
      <h3 class="my-0">{ language.name }</h3>
      <div>{ language.level }</div>
    </div>
  </li>
  )}
</ul>